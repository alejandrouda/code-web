<%# Packages section %>
<section class="bg-white dark:bg-gray-900">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
      <div class="mx-auto max-w-screen-md text-center mb-12 lg:mb-12">
          <h2 class="mb-8 text-4xl tracking-tight font-extrabold text-gray-700" style="margin-bottom:80px;">Nuestros paquetes</h2>
          <%# <p class="mb-5 font-light text-gray-500 sm:text-xl dark:text-gray-400">Nuestros paquetes incluyen un sitio web altamente funcional, con un diseño moderno y un sistema integrado para la administracion de contenidos</p> %>
      </div>
      <div class="space-y-8 lg:grid grid-cols-3 lg:grid-cols-3 sm:gap-6 xl:gap-10 lg:space-y-0">
        <% @packages.each do |package|  %>
          <!-- Pricing Card -->
          <div class="package">
            <div class="flex flex-col p-6 mx-auto max-w-lg text-center text-gray-900 bg-white rounded-lg border border-gray-100 shadow dark:border-gray-600 xl:p-8 dark:bg-gray-800 dark:text-white" style="height:100%">
                <h3 class="mb-4 text-2xl font-semibold"><%=package.name%></h3>
                <p class="font-light text-gray-500 sm:text-lg dark:text-gray-400"><%=package.description%></p>
                <div class="flex justify-center items-baseline my-8">
                    <span class="mr-2 text-3xl font-medium text-red-500 line-through"><%=package.price%>
                    <%=package.currency%></span>
                    <span class="mr-2 text-5xl font-extrabold text-gray-700"><%=(package.price*0.5).floor%></span>
                    
                    <h4><%=package.currency%> + IVA</h4>
                </div>
                <!-- List -->
                <ul role="list" class="mb-8 space-y-4 text-left">
                  <%package.items.each do |item|%>
                    <li class="flex items-center space-x-3">
                        <!-- Icon -->
                        <svg class="flex-shrink-0 w-5 h-5 text-green-500 dark:text-green-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
                        <span class="font-light text-gray-500"><%=item%></span>
                    </li>
                  <%end%>
                </ul>
                <a href="/contacto" style="background-color: rgb(57, 55, 200)" class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-200 font-bold rounded-lg text-md px-5 py-2.5 text-center text-white-600  dark:focus:ring-primary-900">Saber más</a>
            </div>
          </div>
        <%end %>
      </div>
  </div>
</section>